{
  "info": {
    "name": "Inkle Social Feed Backend",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman collection for Inkle Social Feed backend assignment.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth - Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/signup",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "signup"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"password123\",\n  \"bio\": \"Hello from Alice\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"emailOrUsername\": \"alice\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "User - Get Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/me",
          "host": ["{{baseUrl}}"],
          "path": ["users", "me"]
        }
      }
    },
    {
      "name": "User - Update Me",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/me",
          "host": ["{{baseUrl}}"],
          "path": ["users", "me"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice Updated\",\n  \"bio\": \"Updated bio\"\n}"
        }
      }
    },
    {
      "name": "User - Follow",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{targetUserId}}/follow",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{targetUserId}}", "follow"]
        }
      }
    },
    {
      "name": "User - Unfollow",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{targetUserId}}/unfollow",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{targetUserId}}", "unfollow"]
        }
      }
    },
    {
      "name": "User - Block",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{targetUserId}}/block",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{targetUserId}}", "block"]
        }
      }
    },
    {
      "name": "User - Unblock",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{targetUserId}}/unblock",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{targetUserId}}", "unblock"]
        }
      }
    },
    {
      "name": "Post - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts",
          "host": ["{{baseUrl}}"],
          "path": ["posts"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"My first post!\",\n  \"mediaUrl\": \"\"\n}"
        }
      }
    },
    {
      "name": "Post - Like",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/like",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "like"]
        }
      }
    },
    {
      "name": "Post - Unlike",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/unlike",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "unlike"]
        }
      }
    },
    {
      "name": "Posts - Feed (posts only)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/feed",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "feed"]
        }
      }
    },
    {
      "name": "Activity - Wall",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/activity/wall",
          "host": ["{{baseUrl}}"],
          "path": ["activity", "wall"]
        }
      }
    },
    {
      "name": "Admin - Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "users", "{{userId}}"]
        }
      }
    },
    {
      "name": "Admin - Delete Post",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/posts/{{postId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "posts", "{{postId}}"]
        }
      }
    },
    {
      "name": "Admin - Remove Like",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/posts/{{postId}}/remove-like",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "posts", "{{postId}}", "remove-like"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
        }
      }
    },
    {
      "name": "Owner - Change User Role",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/users/{{userId}}/role",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "users", "{{userId}}", "role"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"ADMIN\"\n}"
        }
      }
    }
  ]
}
